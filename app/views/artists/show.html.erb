    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
    </head>
    <body>
        
        <h1><%= @artist.name %></h1><br>
        <p><%= @artist.bio %></p><br>
        <h2>Songs by this artist:</h2><br><ul>
        <%= @artist.songs.each do |song| %>

            <li><%= link_to(song.name, song_path(song))%></li>
        <% end %></ul>
        <br>
        <h2>Genres:</h2>
        <%= @artist.genres.each do |genre| %><ul>
            <li><%= link_to(genre.name, genre_path(genre))%>
        <% end %></ul>
        <br>
        <%= link_to("Edit this artist", edit_artist_path(@artist))%>
        <br>
        <%= link_to("Artist index", artists_path)%>
        <%= %>
    </body>
